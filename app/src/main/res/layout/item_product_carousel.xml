<!-- item_product_carousel.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Customize the UI elements here for displaying product information -->
    <!-- For example: ImageView for product image, TextViews for product name and price, etc. -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="10dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal"
       xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_item_view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:id="@+id/prod_image"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_item_name"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_item_price"
                android:text="Cost"
                android:textSize="17sp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
